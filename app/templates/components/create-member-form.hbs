<form {{action "submitOne" on="submit"}} class="form-inline">
    <div class="form-group">
        <label for="first-name">First Name:</label>
        {{input value=model.firstName class="form-control" name="first-name"}}
        <label for="last-name">Last Name:</label>
        {{input value=model.lastName class="form-control" name="last-name"}}
    </div>
    <div class="experience form-group">
      {{#each model.experiences as |item| }}
        <label for="experience-details">Details:</label>
        {{input value=item.details class="form-control" name="experience-details"}}
        <label for="experience-industry">Industry:</label>
        {{input value=item.industry class="form-control" name="experience-industry"}}
      {{/each}}
    </div>
    <div class="education form-group">
      {{#each model.educations as |item| }}
        <label for="education-title">Title:</label>
        {{input value=item.title class="form-control" name="education-details"}}
        <label for="education-grade">Grade:</label>
        {{input value=item.grade class="form-control" name="education-grade"}}
        <label for="education-start">Start:</label>
        {{input type="date" value=item.start class="form-control" name="education-start"}}
        <label for="education-stop">Stop:</label>
        {{input type="date" value=item.stop class="form-control" name="education-stop"}}
      {{/each}}
    </div>
    <div class="input-group-btn">
        <button
            type="submit"
            class="btn btn-success"
        >
            Save
        </button>
    </div>
</form>